<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/layer_52"
    android:layout_height="match_parent"
    tools:context=".LoanCompairActivity">




    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="370dp"
        android:background="#8A59DD"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="EMI + Financial Calculator"
            android:textColor="@color/white"
            android:textSize="18sp"

            />

    </androidx.appcompat.widget.Toolbar>


    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintVertical_bias="0.0">

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:text="Loan" />

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_weight="1"
            android:text="Loan" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="371dp"
        android:layout_height="34dp"
        android:gravity="center_horizontal"
        android:text="principle amount"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.262"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
        app:layout_constraintVertical_bias="0.010" />


    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="400dp"
        android:layout_height="45dp"
        android:weightSum="3"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.001" >



        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout"
            android:layout_weight="1"
            android:layout_width="150dp"
            android:layout_height="54dp"
            app:errorEnabled="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintVertical_bias="0.0"
            >


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/principleamount1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:padding="2dp"
                android:background="@drawable/corner_redius"
                android:inputType="numberDecimal"
                android:textColorHint="@color/black" />


        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/divider"
            />


        <com.google.android.material.textfield.TextInputLayout

            android:id="@+id/textinput2"
            android:layout_width="150dp"
            android:layout_height="54dp"
            app:errorEnabled="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="MissingConstraints">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/principleamount2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:padding="2dp"
                android:background="@drawable/corner_redius"
                android:inputType="numberDecimal"
                android:textColorHint="@color/black" />

        </com.google.android.material.textfield.TextInputLayout>





    </LinearLayout>


    <TextView
        android:id="@+id/textView6"
        android:layout_width="333dp"
        android:layout_height="35dp"
        android:gravity="center_horizontal"
        android:text="Interest"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5"
        app:layout_constraintVertical_bias="0.010" />


    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="400dp"
        android:layout_height="45dp"
        android:weightSum="3"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.637"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:layout_constraintVertical_bias="0.001">


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout3"
            android:layout_weight="1"
            android:layout_width="150dp"
            android:layout_height="54dp"
            app:errorEnabled="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintVertical_bias="0.0"
            >


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/interestAmount1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:padding="2dp"
                android:background="@drawable/corner_redius"
                android:inputType="numberDecimal"
                android:textColorHint="@color/black" />


        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/divider"
            />


        <com.google.android.material.textfield.TextInputLayout

            android:id="@+id/textinput3"
            android:layout_width="150dp"
            android:layout_height="50dp"
            app:errorEnabled="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="MissingConstraints">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/interestAmount2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:padding="2dp"
                android:background="@drawable/corner_redius"
                android:inputType="numberDecimal"
                android:textColorHint="@color/black" />

        </com.google.android.material.textfield.TextInputLayout>




    </LinearLayout>


    <TextView
        android:id="@+id/textView7"
        android:layout_width="312dp"
        android:layout_height="49dp"
        android:gravity="center"
        android:text="Loan Tenure"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout6"
        app:layout_constraintVertical_bias="0.010" />


    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="400dp"
        android:layout_height="45dp"
        android:weightSum="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:layout_constraintVertical_bias="0.010"
        android:orientation="horizontal">




        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout4"
            android:layout_weight="1"
            android:layout_width="150dp"
            android:layout_height="54dp"
            app:errorEnabled="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintVertical_bias="0.0"
            >


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/year5"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:padding="2dp"
                android:background="@drawable/corner_redius"
                android:inputType="numberDecimal"
                android:textColorHint="@color/black" />


        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/divider"
            />


        <com.google.android.material.textfield.TextInputLayout

            android:id="@+id/textinput4"
            android:layout_width="150dp"
            android:layout_height="54dp"
            app:errorEnabled="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="MissingConstraints">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/year6"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:padding="2dp"
                android:background="@drawable/corner_redius"
                android:inputType="numberDecimal"
                android:textColorHint="@color/black" />

        </com.google.android.material.textfield.TextInputLayout>







    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout11"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:weightSum="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout7"
        app:layout_constraintVertical_bias="0.101">


        <Button

            android:id="@+id/reset"
            android:layout_width="match_parent"
            android:layout_height="40dp"


            android:layout_weight="1"
            android:background="@drawable/buttonredius"
            android:text="reset"


            />

        <Button
            android:id="@+id/cal"
            android:layout_width="match_parent"
            android:layout_height="40dp"

            android:layout_marginLeft="3dp"
            android:layout_weight="1"
            android:background="@drawable/buttonredius"
            android:text="calculate" />


    </LinearLayout>


    <RelativeLayout
        android:id="@+id/Relativelayout1"
        android:layout_width="385dp"
        android:layout_height="190dp"
        android:layout_marginBottom="28dp"
        android:background="@drawable/linearlayoutbackground"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.384"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout11"
        tools:ignore="MissingConstraints">


        <LinearLayout
            android:layout_width="318dp"
            android:layout_height="41dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="21dp"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="29dp"
            android:layout_marginBottom="120dp"
            android:weightSum="2">


            <TextView
                android:id="@+id/monthlypayment1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:text="0"
                android:textAlignment="center"

                />


            <TextView
                android:id="@+id/monthlypayment2"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:text="0"
                android:textAlignment="center"

                />


        </LinearLayout>


        <LinearLayout
            android:layout_width="318dp"
            android:layout_height="41dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="37dp"
            android:layout_marginLeft="37dp"
            android:layout_marginTop="89dp"
            android:layout_marginBottom="60dp"
            android:weightSum="2"

            >


            <TextView
                android:id="@+id/totalinterest1"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginTop="19dp"
                android:layout_weight="1"
                android:text="0"
                android:textStyle="bold"
                android:textAlignment="center"

                />


            <TextView
                android:id="@+id/totalinterest2"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginTop="19dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:text="0"
                android:textAlignment="center"

                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="318dp"
            android:layout_height="41dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="34dp"
            android:weightSum="2"
            android:layout_marginLeft="34dp"
            android:layout_marginBottom="7dp">


            <TextView
                android:id="@+id/totalpayout1"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginTop="19dp"
                android:layout_weight="1"
                android:text="0"
                android:textStyle="bold"
                android:textAlignment="center"

                />


            <TextView
                android:id="@+id/totalpayout2"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginTop="19dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:text="0"
