    <TextView
        android:id="@+id/textView2"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:text="Deposite Amount"
        android:textColor="#2F3293"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.44"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.050" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout"
        android:layout_width="250dp"
        android:layout_height="62dp"
        app:boxBackgroundMode="outline"
        app:errorEnabled="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.010"
        tools:ignore="MissingConstraints">


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/fdDepositeAmount1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:padding="2dp"
            android:background="@drawable/corner_redius"
            android:inputType="numberDecimal"
            android:textColorHint="@color/black" />


    </com.google.android.material.textfield.TextInputLayout>



    <TextView
        android:id="@+id/textView4"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Interest Rate"
        android:textColor="#2F3293"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.40"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout"
        app:layout_constraintVertical_bias="0.010" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout2"
        android:layout_width="250dp"
        android:layout_height="61dp"
        app:boxBackgroundMode="outline"
        app:errorEnabled="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.44"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="0.010"
        tools:ignore="MissingConstraints">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/fdInterest1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:padding="2dp"
            android:background="@drawable/corner_redius"
            android:inputType="numberDecimal" />


    </com.google.android.material.textfield.TextInputLayout>



    <TextView
        android:id="@+id/textView5"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Term"
        android:textAlignment="center"
        android:textColor="#2F3293"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.40"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout2"
        app:layout_constraintVertical_bias="0.010" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout3"
        android:layout_width="250dp"
        android:layout_height="62dp"
        app:boxBackgroundMode="outline"
        app:errorEnabled="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.44"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.010"
        tools:ignore="MissingConstraints">


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/year2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:padding="2dp"
            android:background="@drawable/corner_redius"
            android:inputType="numberDecimal" />

        <ToggleButton
            android:id="@+id/toggle2"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:textOff="year"
            android:textOn="Month"
            android:layout_marginTop="-57dp"
            android:background="@drawable/corner_redius"
            android:layout_marginLeft="174dp"/>


    </com.google.android.material.textfield.TextInputLayout>




    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:weightSum="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout3"
        app:layout_constraintVertical_bias="0.052">

        <Button

            android:id="@+id/reset"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/buttonredius"
            android:layout_marginVertical="3dp"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="10dp"
            android:textSize="10sp"
            android:layout_weight="1"
            android:text="reset"


            />

        <Button
            android:id="@+id/calculate"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginVertical="3dp"
            android:layout_marginLeft="10dp"
            android:textSize="10sp"
            android:background="@drawable/buttonredius"
            android:layout_weight="1"
            android:text="calculate" />

        <Button
            android:id="@+id/statstics"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginVertical="3dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:textSize="10sp"
            android:background="@drawable/buttonredius"
            android:text="Satistics" />

    </LinearLayout>



    <RelativeLayout
        android:background="@drawable/table_a"
